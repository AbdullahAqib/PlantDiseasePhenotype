<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navbar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="TODO" android:src="@drawable/logo"
                />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:text="Personal Information"/>

            <TextView
                android:id="@+id/txt_name"
                android:drawableLeft="@drawable/profile_icon"
                android:layout_width="match_parent"
                android:drawableTint="#8D8383"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txt_email"
                android:drawableTint="#8D8383"
                android:drawableLeft="@drawable/email_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:text="Settings"/>

            <TextView
                android:id="@+id/update_public_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/edit_icon"
                android:drawablePadding="10dp"
                android:drawableTint="#8D8383"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Update Public Profile"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/update_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/email_icon"
                android:drawablePadding="10dp"
                android:drawableTint="#8D8383"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Update Email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/update_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:drawableTint="#8D8383"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Update Password"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_feedback_32"
                android:drawablePadding="10dp"
                android:drawableTint="#8D8383"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Give feedback"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt_logout"
                android:drawableTint="#8D8383"
                android:drawableLeft="@drawable/logout_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:text="Logout"/>

            <TextView
                android:id="@+id/deactivate"
                android:drawableTint="#DB1212"
                android:drawableLeft="@drawable/deactivate_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#DB1212"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:text="Deactivate Account"/>

        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"
        app:itemBackground="@color/colorWhite"
        app:itemIconTint="#8D8383"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>